// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Class {
    id              Int              @id
    name            String
    specializations Specialization[]
    Character       Character[]

    @@map("classes")
}

model Specialization {
    id                 Int                  @id
    classId            Int
    class              Class                @relation(fields: [classId], references: [id])
    name               String
    TierDpsSimData     TierDpsSimData[]
    WishlistUploadInfo WishlistUploadInfo[]

    @@map("specializations")
}

model Character {
    id                 Int                  @id
    name               String
    guildRank          Int
    classId            Int
    class              Class                @relation(fields: [classId], references: [id])
    WishlistUploadInfo WishlistUploadInfo[]
}

model TierDpsSimData {
    specializationId Int            @id
    twoPiece         Decimal
    fourPiece        Decimal
    noTier           Decimal
    specialization   Specialization @relation(fields: [specializationId], references: [id])

    @@map("tier_dps_sim_data")
}

model WishlistUploadInfo {
    characterId      Int
    specializationId Int
    normal           DateTime?
    heroic           DateTime?
    mythic           DateTime?

    character      Character      @relation(fields: [characterId], references: [id])
    specialization Specialization @relation(fields: [specializationId], references: [id])

    @@id([characterId, specializationId])
}

model SyncHistory {
    reportName String   @id
    timestamp  DateTime
}
